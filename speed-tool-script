local ZapiszPrdkoButton = Instance.new("TextButton") -- TWÓJ PRZYCISK "ZAPISZ PRĘDKOŚĆ"
local UICorner_4 = Instance.new("UICorner") -- Zaokrąglenie dla przycisku "Zapisz Prędkość"
